     # http://localhost/dental/index.php/json/json2
               public function json2()
               {
                   $tb="member";
                   $q=$this->db->get($tb);
                     foreach($q->result() as $row)
                    {
                        $rows[]=$row;
                    }
                    echo   json_encode($rows);
               }




